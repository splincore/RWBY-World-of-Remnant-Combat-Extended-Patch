<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Velvet's Camera, it's for shooting... photos -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RWBY_Velvet_Camera"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>side</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>1</power>
					<cooldownTime>2</cooldownTime>
					<armorPenetration>0.06</armorPenetration>
					<linkedBodyPartsGroup>Edge</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>front</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>1</power>
					<cooldownTime>2</cooldownTime>
					<armorPenetration>0.06</armorPenetration>
					<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RWBY_Velvet_Camera"]/statBases</xpath>
		<value>
			<Bulk>2</Bulk>
			<MeleeCounterParryBonus>1</MeleeCounterParryBonus>
		</value>
	</Operation>

	<!-- Velvet's Camera Box, craftable -->

	<Operation Class="PatchOperationReplace">
