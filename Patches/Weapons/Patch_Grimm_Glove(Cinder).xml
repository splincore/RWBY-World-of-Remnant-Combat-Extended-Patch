<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Grimm Glove, non craftable -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="RWBY_Grimm_Glove"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>hand</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>1</power>
					<cooldownTime>2</cooldownTime>
					<armorPenetration>0.02</armorPenetration>
					<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="RWBY_Grimm_Glove"]/statBases</xpath>
		<value>
			<Bulk>1</Bulk>
			<MeleeCounterParryBonus>1</MeleeCounterParryBonus>
		</value>
	</Operation>

</Patch>